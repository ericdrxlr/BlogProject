@model IEnumerable<BlogProject.Models.Blog>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>Choose which posts to see:</p>
    <div>
        @foreach (var blog in Model)
        {
            <p>@blog.Name</p>
            <a href="/Blog/Posts/@posts.Id">Posts</a>
        }

    </div>
</body>
</html>
