@model BlogProject.Models.Blog
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Posts</title>
</head>
<body>
    <h1>Posts</h1>
    <nav>
        <a href="/Home/Index">Home</a>
        <a href="/Blog/Index">View Blogs</a>
        <a href="/Home/Index/#about">content</a>
    </nav>

    @foreach (var post in Model.Posts)
    {
        <p>@post.Title</p>
        <p>@post.Author</p>
        <p>@post.PublishDate</p>
        <a href="/Post/Details/@post.Id">View Post</a>
    }
    <a href="/Post/CreateByBlogId/@Model.Id">Make A New Post</a>
</body>
</html>
